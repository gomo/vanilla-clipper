{
    "extends": "@yarnaimo/tss/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "lib": ["dom", "dom.iterable", "es2018"],
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/@types/*", "src/@types/*", "functions/src/@types/*"]
        },
        "types": ["@types/node", "@types/jest", "@emotion/core"]
    },
    "include": ["src", "functions/src", "web/src"],
    "exclude": ["node_modules"]
}
