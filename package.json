{
  "name": "vanilla-clipper",
  "version": "0.2.0",
  "repository": "github:yarnaimo/vanilla-clipper",
  "license": "MIT",
  "author": "yamaimo <yarnaimo@gmail.com>",
  "files": [
    "/bin"
  ],
  "main": "dist/index.js",
  "bin": {
    "start-vc-server": "dist/bin/start-vc-server.js",
    "vanilla-clipper": "dist/bin/vanilla-clipper.js"
  },
  "scripts": {
    "build": "tsc",
    "debug": "node --inspect -r ts-node/register",
    "dev": "yarn ts-node src/index.ts",
    "postinstall": "ts-node server/scripts/prepare-v1-data-dir.ts",
    "prepare": "yarn build",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "NODE_ENV=test jest -w1",
    "test:server": "pouchdb-server -d tmp/db",
    "ts-node": "ts-node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,vue,gql,md}": [
      "prettier --write --ignore-path .gitignore",
      "git add"
    ],
    "./package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "dependencies": {
    "@postlight/mercury-parser": "^2.0.0",
    "@yarnaimo/rain": "latest",
    "@yarnaimo/twimo": "^1.4.0",
    "appdata-path": "^1.0.0",
    "chrome-launcher": "^0.10.5",
    "css-tree": "^1.0.0-alpha.29",
    "filenamify-url": "^1.0.0",
    "fs-extra": "^7.0.1",
    "html-minifier": "^3.5.21",
    "jsdom": "^13.1.0",
    "mime-types": "^2.1.21",
    "oclif": "^1.13.0",
    "pouchdb": "^7.0.0",
    "pouchdb-find": "^7.0.0",
    "pouchdb-server": "^4.1.0",
    "puppeteer-core": "^1.11.0",
    "signale": "^1.3.0",
    "tldjs": "^2.3.1",
    "trysafe": "^0.0.3",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@types/css-tree": "^1.0.0",
    "@types/filenamify-url": "^1.0.0",
    "@types/fs-extra": "^5.0.4",
    "@types/html-minifier": "^3.5.2",
    "@types/jsdom": "^12.2.0",
    "@types/micro": "^7.3.3",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^8.10.0",
    "@types/pouchdb": "^6.3.3",
    "@types/puppeteer": "^1.10.0",
    "@types/puppeteer-core": "^1.9.0",
    "@types/signale": "^1.2.0",
    "@types/tldjs": "^2.3.0",
    "@yarnaimo/tss": "latest",
    "micro": "^9.3.3",
    "puppeteer": "^1.11.0",
    "serve-handler": "^5.0.7"
  }
}
